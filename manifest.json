{
  "name": "Add to linksaw.com",
  "description": "A chrome extension to add the current website as a new link to linksaw.com.",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "16": "images/l-16.png",
    "48": "images/l-48.png",
    "128": "images/l-128.png"
  },
  "permissions": [
    "activeTab",
    "https://linksaw.com/*"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/l-16.png",
      "48": "images/l-48.png",
      "128": "images/l-128.png"
    },
    "default_popup": "popup.html"
  }
}
